<div class="container-fluid">
    <div class="col-sm-3 col-md-2 sidebar">
        <h3> chatters:</h3>
        <ul class="nav nav-sidebar">
            {{# each users }}
                <li><span class="glyphicon glyphicon-user ">  {{this.username}} </span></li>
            {{/each}}
            <br>
        </ul>
        <br><br>
    </div>
    <div class="col-sm-9">
        <h1>chatterBox</h1>
        <hr>
        <div class="chat_log">
            <p class="alert alert-info">You: Hi</p>
            <p class="alert alert-white">Person1: How is life</p>
            <p class="alert alert-info">You: good!</p>
        </div>

        <br><br><br>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <hr>
        <h3>Send a message:</h3>
        <form id="send_message">
            <input class="form-control" placeholder="To: " type="text">
            <br>
            <textarea placeholder="Message" class="form-control" id="message_to" rows="5" required></textarea>
            <br>
            <input type="submit" class="btn btn-success" value="Send">
        </form>
    </div>
</div>
